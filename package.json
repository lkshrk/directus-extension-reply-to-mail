{
  "name": "directus-extension-reply-to-mail",
  "description": "Custom operation to send emails. It uses the Directus Nodemailer service and provides a replyTo option.",
  "icon": "extension",
  "version": "1.0.3",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-extension-operation"
  ],
  "homepage": "https://github.com/lkshrk/directus-extension-reply-to-mail#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lkshrk/directus-extension-reply-to-mail.git"
  },
  "bugs": {
    "url": "https://github.com/lkshrk/directus-extension-reply-to-mail/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "directus:extension": {
    "type": "operation",
    "path": {
      "app": "dist/app.js",
      "api": "dist/api.js"
    },
    "source": {
      "app": "src/app.ts",
      "api": "src/api.ts"
    },
    "host": "^10.10.0"
  },
  "scripts": {
    "build": "directus-extension build",
    "dev": "directus-extension build -w --no-minify",
    "link": "directus-extension link",
    "prepare": "npm run build",
    "release": "npm version patch && git push --follow-tags",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage"
  },
  "dependencies": {
    "marked": "14.1.2",
    "sanitize-html": "2.13.1"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "12.1.4",
    "@types/jest": "^29.5.12",
    "@types/nodemailer": "6.4.16",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.9.3",
    "vue": "^3.5.25"
  }
}
