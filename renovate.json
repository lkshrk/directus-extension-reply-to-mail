{
  "extends": [
    "config:recommended"
  ],
  "enabled": true,
  "schedule": [
    "every weekend"
  ],
  "automerge": true,
  "automergeType": "pr",
  "rebaseWhen": "auto",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 20
}
