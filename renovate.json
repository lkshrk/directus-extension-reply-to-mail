{
  "extends": [
    "config:recommended"
  ],
  "enabled": true,
  "schedule": [
    "every weekend"
  ],
  "automerge": true,
  "automergeType": "pr",
  "rebaseWhen": "auto",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "automerge": true
    }
  ],
  "prConcurrentLimit": 2,
  "prHourlyLimit": 20
}
